{
    "$id": "https://data.landsofhope.com/schemas/v1/items/enhancements/item-bejewel.json",
    "title": "ItemBejewel",
    "type": "object",
    "properties": {
        "$type": {
            "const": "/v1/items/enhancements/item-bejewel"
        },
        "id": {
            "$ref": "/schemas/v1/items-enhancements-bejewels-id.gen.json"
        },
        "item": {
            "$ref": "/schemas/v1/items-id.gen.json"
        },
        "skillValue": {
            "type": "integer",
            "minimum": 5
        },
        "ingredients": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "$ref": "/schemas/v1/items-id.gen.json"
                    },
                    "quantity": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "required": [
                    "id",
                    "quantity"
                ],
                "additionalProperties": false
            }
        },
        "effects": {
            "type": "object",
            "properties": {
                "properties": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1,
                            "multipleOf": 0.01
                        }
                    },
                    "propertyNames": {
                        "$ref": "/schemas/v1/characters/character-property-name.json"
                    },
                    "minProperties": 1,
                    "additionalProperties": false
                },
                "skills": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1,
                            "multipleOf": 0.01
                        }
                    },
                    "propertyNames": {
                        "$ref": "/schemas/v1/skills-id.gen.json"
                    },
                    "minProperties": 1,
                    "additionalProperties": false
                }
            },
            "additionalProperties": false,
            "anyOf": [
                {
                    "required": [
                        "properties"
                    ]
                },
                {
                    "required": [
                        "skills"
                    ]
                }
            ]
        }
    },
    "required": [
        "$type",
        "id",
        "skillValue",
        "ingredients",
        "effects"
    ]
}