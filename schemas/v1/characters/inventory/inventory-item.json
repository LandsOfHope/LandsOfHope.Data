{
    "$id": "https://data.landsofhope.com/schemas/v1/characters/inventory/inventory-item.json",
    "title": "CharacterInventoryItem",
    "type": "object",
    "properties": {
        "$type": {
            "const": "/v1/characters/inventory/inventory-item"
        },
        "id": {
            "$ref": "/schemas/v1/characters/inventory/inventory-item-id.json"
        },
        "item": {
            "oneOf": [
                {
                    "$ref": "/schemas/v1/item.json"
                },
                {
                    "$ref": "/schemas/v1/items-id.gen.json"
                },
                {
                    "$ref": "/schemas/v1/characters/inventory/unidentified-item.json"
                }
            ]
        },
        "level": {
            "type": "integer",
            "minimum": 0
        },
        "quantity": {
            "type": "integer",
            "minimum": 1
        },
        "location": {
            "$ref": "/schemas/v1/items-locations-id.gen.json"
        },
        "bag": {
            "enum": [
                "bag-slot-1",
                "bag-slot-2",
                "bag-slot-3",
                "bag-slot-4",
                "bag-slot-5",
                "bag-slot-6",
                "bag-slot-7",
                "bag-slot-8"
            ]
        },
        "locked": {
            "type": "object",
            "properties": {
                "lockpicking": {
                    "type": "integer",
                    "minimum": 5
                }
            },
            "additionalProperties": false,
            "required": [
                "lockpicking"
            ]
        },
        "expiry": {
            "$ref": "/schemas/v0/datetime.json"
        },
        "guild": {
            "type": "integer",
            "minimum": 1
        },
        "quality": {
            "type": "integer",
            "minimum": 0
        },
        "actions": {
            "$ref": "/schemas/v1/characters/inventory/actions/inventory-item-actions.json"
        },
        "stackHash": {
            "$ref": "/schemas/v1/characters/inventory/inventory-item-stack-hash.json"
        },
        "nickname": {
            "type": "string",
            "maxLength": 30
        },
        "enhancements": {
            "type": "array",
            "items": {
                "enum": [
                    "imbued",
                    "bejewelled",
                    "named",
                    "patched"
                ]
            },
            "minItems": 1
        }
    },
    "anyOf": [
        {
            "not": {
                "required": [
                    "enhancements"
                ]
            }
        },
        {
            "$ref": "/schemas/v1/characters/inventory/enhancements/enhanced-imbued.json"
        },
        {
            "$ref": "/schemas/v1/characters/inventory/enhancements/enhanced-bejewelled.json"
        },
        {
            "$ref": "/schemas/v1/characters/inventory/enhancements/enhanced-named.json"
        },
        {
            "$ref": "/schemas/v1/characters/inventory/enhancements/enhanced-patched.json"
        }
    ],
    "required": [
        "$type",
        "id",
        "item",
        "level",
        "quantity",
        "location",
        "actions",
        "stackHash"
    ]
}