{
    "$id": "https://data.landsofhope.com/schemas/v1/item.json",
    "title": "Item",
    "type": "object",
    "properties": {
        "$type": {
            "const": "/v1/item"
        },
        "id": {
            "$ref": "/schemas/v1/items-id.gen.json"
        },
        "image": {
            "$ref": "/schemas/v1/items-images-id.gen.json"
        },
        "type": {
            "$ref": "/schemas/v1/items-types-id.gen.json"
        },
        "dpr": {
            "type": "integer",
            "minimum": 0
        },
        "armorType": {
            "$ref": "/schemas/v1/items/armor-type.json"
        },
        "expansion": {
            "$ref": "/schemas/v1/expansions-id.gen.json"
        },
        "legendary": {
            "const": true
        },
        "set": {
            "$ref": "/schemas/v1/items-sets-id.gen.json"
        },
        "material": {
            "$ref": "/schemas/v1/items-materials-id.gen.json"
        },
        "skill": {
            "$ref": "/schemas/v1/skills-id.gen.json"
        }
    },
    "additionalProperties": false,
    "required": [
        "$type",
        "image",
        "type"
    ]
}