{
    "$id": "https://data.landsofhope.com/schemas/map.json",
    "type": "object",
    "properties": {
        "name": {
            "$ref": "localized-string.json"
        },
        "startx": {
            "type": "integer"
        },
        "starty": {
            "type": "integer"
        },
        "tiles": {
            "type": "array",
            "minItems": 100,
            "maxItems": 100,
            "items": {
                "type": "array",
                "minItems": 100,
                "maxItems": 100,
                "items": {
                    "$ref": "map-tile.json"
                }
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "tiles"
    ]
}